<h1>Add a Product to Your Store</h1>

<form class="" action="/products" method="post">
  <label for="name">Product Name:</label>
  <input type="text" name="name" id="name">

  <label for="price">Product Price:</label>
  <input type="text" name="price" id="price">

  <button type="submit" name="button">Add Product</button>
</form>

<% if @products.any?() %>
  <% @products.each() do |product| %>
    <ul>
      <li><a href="#"><%= product.name() %></a></li>
      <li><a href="#"><%= product.price() %></a></li>
      <li><a href="#"><%= product.sold() %></a></li>
    </ul>
    <a href="/products/<%= product.id() %>"><button type="button">Edit</button></a>
    <form action="/products/<%= product.id() %>" method="post">
      <input name="_method" type="hidden" value="delete">
      <button type="submit" name="button">DELETE</button>
    </form>
  <% end %>
<% else %>
  <h2>You don't have any products in your store.  Add them to make that scrilla!</h2>
<% end %>
